{
  "extends": [
    "mergeConfidence:all-badges",
    ":semanticCommits",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScopeDisabled",
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    // Open PR to update lockfile every 1st day of month & automerge every 2nd
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": false,
    "schedule": ["* * * 1 *"],
    "automergeSchedule": ["* * * 2 *"],
  },
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "matchPackageNames": ["clap", "clap_complete", "clap_builder", "clap_lex"],
      "groupName": "Clap updates"
    },
    {
      // Ignore Cargo patch updates -- updated with lockfile maintenance
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["patch"],
      "enabled": false,
    }
  ]
}
